<section id="about" aria-labelledby="about-h">
  <div class="container">
    <h1 id="about-h">{{sections.about.heading}}</h1>
    <p>{{sections.about.body}}</p>
  </div>
</section>

<section id="projects" aria-labelledby="projects-h">
  <div class="container">
    <h2 id="projects-h">{{sections.projects.heading}}</h2>
    {{#if sections.projects.items.length}}
      <ul class="card-grid">
        {{#each sections.projects.items}}
          <li class="card">
            <h3>{{this.title}}</h3>
            {{#if this.image}}
              <figure>
                <img src="{{this.image.src}}" alt="{{this.image.alt}}">
                {{#if this.caption}}<figcaption>{{this.caption}}</figcaption>{{/if}}
              </figure>
            {{/if}}
            <p>{{this.summary}}</p>
            {{#if this.link}}<p><a href="{{this.link.href}}">{{this.link.label}}</a></p>{{/if}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p role="status">Projects coming soon.</p>
    {{/if}}
  </div>
</section>

<section id="contact" aria-labelledby="contact-h">
  <div class="container">
    <h2 id="contact-h">{{sections.contact.heading}}</h2>
    <form method="post" action="#" novalidate>
      <div class="form-row">
        <label for="name">Name</label>
        <input id="name" name="name" required autocomplete="name">
      </div>
      <div class="form-row">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" required autocomplete="email">
      </div>
      <div class="form-row">
        <label for="msg">Message</label>
        <textarea id="msg" name="message" rows="5" required></textarea>
      </div>
      <p id="form-status" class="sr-only" role="status" aria-live="polite"></p>
      <button type="submit">Send</button>
      <p><strong>Or email:</strong> <a href="mailto:{{sections.contact.email}}">{{sections.contact.email}}</a></p>
    </form>
  </div>
</section>

