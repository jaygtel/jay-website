{{!-- src/templates/layouts/base.hbs --}}
<!doctype html>
<html lang="en">

<head>
  {{> meta}} {{!-- title, description, canonical from data/page --}}
  <link rel="stylesheet" href="{{site.base}}/assets/css/main.css">
</head>

<body>
  <a class="skip-link" href="#main">Skip to content</a>

  {{> header site=site}}

  <main id="main" tabindex="-1">
    {{> @partial-block}} {{!-- ‚üµ This yields the page content --}}
  </main>

  <footer class="site-footer">
    <p>&copy; {{year}} {{site.footer.copyrightName}}</p>
    {{#if site.footer.links}}
    <ul class="footer-links">
      {{#each site.footer.links}}
      <li><a href="{{this.href}}">{{this.label}}</a></li>
      {{/each}}
    </ul>
    {{/if}}
  </footer>

  <script type="module" src="{{site.base}}/assets/js/main.js"></script>
</body>

</html>
