{{!-- src/templates/partials/meta.hbs --}}
{{!-- Minimal meta; I’ll expand with full SEO/OG later --}}
<meta charset="utf-8"> {{!-- keep first for faster encoding detection --}}
<title>{{#if page.title}}{{page.title}} · {{/if}}{{site.title}}</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

{{!-- Prefer page description; fall back to site description --}}
<meta name="description" content="{{#if page.description}}{{page.description}}{{else}}{{site.description}}{{/if}}">

{{!-- Canonical with Pages base + page path.
Assumes:
- site.canonical has NO trailing slash (e.g., https://jaygtel.github.io)
- site.base is '' locally OR '/jay-website' on Pages
- page.path starts and ends with '/', e.g. '/', '/projects/' --}}
<link rel="canonical" href="{{site.canonical}}{{site.base}}{{#if page.path}}{{page.path}}{{else}}/{{/if}}">
